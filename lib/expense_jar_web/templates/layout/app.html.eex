<main role="main" class="flex-1 flex flex-col px-4">
  <%= if info = get_flash(@conn, :info) do %>
    <%= render ExpenseJarWeb.SharedView, "alert.html", %{type: "info", title: info} %>
  <% end %>
  <%= if error = get_flash(@conn, :error) do %>
    <%= render ExpenseJarWeb.SharedView, "alert.html", %{type: "error", title: error} %>
  <% end %>
  <%= @inner_content %>
</main>
