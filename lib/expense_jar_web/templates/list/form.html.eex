<%= form_for @changeset, @action, fn f -> %>
<%= if @changeset.action do %>
  <%= render ExpenseJarWeb.SharedView, "alert.html", %{type: "danger", title: "Oops, something went wrong! Please check the errors below."} %>
<% end %>

<%= label f, :name %>
<%= text_input f, :name, class: "form-input" %>
<%= error_tag f, :name %>

<div class="mt-4 text-right">
  <%= submit "Save", class: "button button--primary" %>
</div>
<% end %>
